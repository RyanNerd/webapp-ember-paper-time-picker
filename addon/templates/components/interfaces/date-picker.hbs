
<div class="calendar-container">
	<div class="header-container">
		<div class="day-of-week">{{dayOfWeek}}</div>
		<div class="month-container">
			<div class="date-picker-header-month {{monthActive}}">{{month}}</div>
		</div>

		<div class="date-picker-header-day {{dayActive}}">{{day}}</div>

		<div class="year-container">
			<div class="date-picker-header-year {{yearActive}}">{{year}}</div>
		</div>
	</div>

	<div class="calendar-body">
		<div class="header">
			<div class="subtract-month" {{action "subtractMonth"}}></div>
			<div class="month-year {{monthYearActive}}">{{monthYear}}</div>
			<div class="add-month" {{action "addMonth"}}></div>
		</div>

		<table class="calendar">
			<tr class="keepOpen week-header-row">
				<th class="keepOpen week-header-data">S</th>
				<th class="keepOpen week-header-data">M</th>
				<th class="keepOpen week-header-data">T</th>
				<th class="keepOpen week-header-data">W</th>
				<th class="keepOpen week-header-data">T</th>
				<th class="keepOpen week-header-data">F</th>
				<th class="keepOpen week-header-data">S</th>
			</tr>

		{{#each groupedArray as |week|}}
			<tr class="keepOpen week-row">
				{{#each week as |day|}}
					{{#if day}}
						{{#if day.isDisabled}}
							<td class="keepOpen disabled-day">{{day.dayOfMonth}}</td>
						{{else}}
							{{#if day.isCurrentDay}}
								<td class="keepOpen valid-day current-day" {{action "dayClicked" day}}>{{day.dayOfMonth}}</td>
							{{else}}
								<td class="keepOpen valid-day" {{action "dayClicked" day}}>{{day.dayOfMonth}}</td>
							{{/if}}
						{{/if}}
					{{else}}
						<td class="keepOpen invalid-day"></td>
					{{/if}}
				{{/each}}
			</tr>
		{{/each}}
		</table>
	</div>
</div>
